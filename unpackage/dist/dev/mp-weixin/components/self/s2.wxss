.fisrt-row {
  width: 100%;
  height: 330rpx;
  text-align: center;
}
.fisrt-row .bg > image {
  width: 100%;
  height: 330rpx;
  position: fixed;
  top: 0px;
  left: 0px;
}
.fisrt-row .notify > image {
  width: 45rpx;
  height: 45rpx;
  position: fixed;
  right: 20rpx;
  top: 20rpx;
}
.fisrt-row .avatar > image {
  width: 130rpx;
  height: 130rpx;
  position: relative;
  top: 50rpx;
  border-radius: 50%;
  border: 2px lightgray solid;
}
.fisrt-row .name {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  top: 50rpx;
  font-weight: bold;
  font-size: 40rpx;
  color: white;
}
.fisrt-row .name image {
  width: 50rpx;
  height: 50rpx;
}
.second-row {
  width: 90%;
  height: 300rpx;
  box-shadow: 2rpx 2rpx 15rpx 2rpx rgba(0, 0, 0, 0.1);
  position: relative;
  top: 50rpx;
  left: 35rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  z-index: -1;
}
.second-row .row-one, .second-row .row-two {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 25rpx;
}
.second-row .row-one .item > image, .second-row .row-two .item > image {
  width: 70rpx;
  height: 70rpx;
  opacity: 0.8;
}
.second-row .row-one .item, .second-row .row-two .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.third-row {
  width: 90%;
  height: 100rpx;
  box-shadow: 2rpx 2rpx 15rpx 2rpx rgba(0, 0, 0, 0.1);
  position: relative;
  top: 80rpx;
  left: 35rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.8;
  z-index: -1;
}
.fourth-row {
  width: 90%;
  position: relative;
  top: 110rpx;
  left: 35rpx;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 15rpx 2rpx rgba(0, 0, 0, 0.1);
}
.end-line {
  text-align: center;
  position: relative;
  top: 240rpx;
  font-size: 20rpx;
  opacity: 0.7;
}

